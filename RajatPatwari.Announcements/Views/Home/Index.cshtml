<form>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input id="name" class="form-control" type="email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input id="description" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <label for="contact" class="col-sm-2 col-form-label">Contact</label>
        <div class="col-sm-10">
            <input id="contact" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <label for="start" class="col-sm-2 col-form-label">Start</label>
        <div class="col-sm-10">
            <input id="start" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group row">
        <label for="end" class="col-sm-2 col-form-label">End</label>
        <div class="col-sm-10">
            <input id="end" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">Time</div>
        <div class="col-sm-10">
            <div class="form-check">
                <input id="immidiate" class="form-check-input" type="checkbox" />
                <label for="immidiate" class="form-check-label">Announce Immidiately?</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</form>